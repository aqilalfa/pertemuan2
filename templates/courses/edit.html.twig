{% extends 'layout.html.twig' %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-warning">
                <h2 class="mb-0"><i class="bi bi-pencil"></i> {{ title }}</h2>
            </div>
            <div class="card-body">
                {% if error %}
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i> {{ error }}
                </div>
                {% endif %}

                <form method="POST" action="/courses/{{ course.id }}/edit">
                    <div class="mb-3">
                        <label for="name" class="form-label">Course Name <span class="text-danger">*</span></label>
                        <input type="text" 
                               class="form-control" 
                               id="name" 
                               name="name" 
                               value="{{ old.name|default(course.name) }}" 
                               required 
                               autofocus
                               placeholder="e.g., Introduction to Python Programming">
                        <div class="form-text">Enter a descriptive name for your course.</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" 
                                  id="description" 
                                  name="description" 
                                  rows="5"
                                  placeholder="Enter course description (optional)">{{ old.description|default(course.description) }}</textarea>
                        <div class="form-text">Provide additional information about the course.</div>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Course ID: <strong>{{ course.id }}</strong> (cannot be changed)
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Update Course
                        </button>
                        <a href="/courses/{{ course.id }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
